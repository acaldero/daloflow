version: "3.8"

services:
  node:
    build:
      context: ./
      dockerfile: ./Dockerfile
    image: daloflow:latest
    volumes:
      - type: bind
        source: /mnt/local-storage/daloflow
        target: /usr/src/daloflow
    networks:
      - backend
    runtime: nvidia

networks:
  backend:
    driver: bridge
